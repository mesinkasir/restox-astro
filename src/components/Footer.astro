---
const today = new Date();
import { SITE_TITLE,present,address,phone,whatsapp,city } from '../config';
---
<div class="col-md-12 p-3 p-md-5">
<div class="bg-dark text-white rounded p-3 p-md-5 row">
<p class="display-4 col-md-4 mt-5"><strong><a href="/" class="text-white">{SITE_TITLE}</a></strong></p>
<p class="col-md-4">
{present}<br/>{address} <br/>{city}<br/>
Whatsapp : {whatsapp}<br/>
Call : {phone}
</p>
<div class="col-md-4 mb-3">
<form action="https://airform.io/axcora@gmail.com" method="post">
  <input class="form-control p-1 mt-1 mb-1" type="text" name="name" placeholder="No WHatsapp & Nama">
  <textarea class="form-control p-1 mt-1 mb-1" name="message" placeholder="Masukan Pesan anda"></textarea>
  <button class="btn btn-light float-end">Kirim Pesan</button>
</form>
</div>
</div>
</div>
<footer class="col-md-12 p-1 text-center">
	&copy; {today.getFullYear()} <a href="/">{SITE_TITLE}</a>
</footer>
